<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e9d0f5"
            android:elevation="4dp">

            <TextView
                android:id="@+id/TVParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:padding="9dp"
                android:text="Question"
                android:textColor="#2e1616"
                android:textStyle="bold"
                tools:ignore="ObsoleteLayoutParam" />

            <LinearLayout
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/IVpeopledp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_people_dp"
                        android:clickable="true"
                        android:focusable="true"/>
                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TVName"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Name"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/TVtimestam"
                            android:layout_width="260dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:text="Time" />
                    </LinearLayout>

                <ImageView
                    android:id="@+id/IVCommentBoxView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_reply"
                    android:clickable="true"
                    android:focusable="true"/>


            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/LLvisibility"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/ETCommentyouranswer"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="Comment your answer..."
            tools:ignore="HardcodedText"/>
        <Button
            android:id="@+id/BPostAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textColor="#ffffff"
            android:background="@drawable/mybutton" />
    </LinearLayout>



</LinearLayout>