<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ead6f4" />
            <gradient android:angle="-90" android:startColor="#9970ae" android:endColor="#be9bcf"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF2F0345" />
            <solid android:color="#FF6F577B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF2F0345" />
            <gradient android:angle="-90" android:startColor="#FF6F577B" android:endColor="#FF805097" />
        </shape>
    </item>
</selector>